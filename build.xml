      <bootclasspath refid="com.examples.robertozen.module.bootclasspath"/>
      <classpath refid="com.examples.robertozen.module.production.classpath"/>
      <src refid="com.examples.robertozen.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.com.examples.robertozen"/>
    </javac>
    
    <copy todir="${distributedsystem.output.dir}">
      <fileset dir="${distributedsystem.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${distributedsystem.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.com.examples.robertozen.tests" depends="compile.module.com.examples.robertozen.production" description="compile module com.examples.robertozen; test classes" unless="skip.tests">
    <mkdir dir="${distributedsystem.testoutput.dir}"/>
    <javac destdir="${distributedsystem.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.com.examples.robertozen}/javac">
