  <target name="generate-jar" depends="init, clean, compile.module.com.examples.robertozen" description="generate jar file">

    <jar destfile="${distributedsystem.basedir}/project.jar"
         basedir="${distributedsystem.output.dir}"
         includes="**/*.class">
      <manifest>
        <attribute name="Main-Class" value="com.distributedalgorithms.project.Simulator" />
        <attribute name="Class-Path" value="${distributedsystem.output.dir}" />
      </manifest>
    </jar>
  </target>
  
  <target name="all" depends="build.modules" description="build all"/>
