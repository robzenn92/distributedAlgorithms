  <target name="compile.module.com.examples.robertozen.production" description="Compile module com.examples.robertozen; production classes">
    <mkdir dir="${distributedsystem.output.dir}"/>
    <javac destdir="${distributedsystem.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.com.examples.robertozen}/javac">
